{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nickschot/ember-mobile-menu"
  },
  "workspaces": [
    "addon",
    "docs",
    "test-app"
  ],
  "scripts": {
    "changelog": "npx lerna-changelog --from=v0.1.0-alpha.5 > CHANGELOG.md",
    "release": "release-it"
  },
  "devDependencies": {
    "release-it": "15.11.0",
    "@release-it-plugins/lerna-changelog": "5.0.0",
    "release-it-yarn-workspaces": "github:refi93/release-it-yarn-workspaces#refi93/esm-support"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@babel/parser": "7.17.3",
      "@octokit/rest": "^19.0.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "after:release": "cd docs && ember deploy production"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "release-it-yarn-workspaces": {
        "publish": true,
        "workspaces": [
          "addon"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "docs/package.json",
            "test-app/package.json"
          ],
          "versionUpdates": [
            "docs/package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "18.18.2",
    "pnpm": "8.10.3"
  }
}
